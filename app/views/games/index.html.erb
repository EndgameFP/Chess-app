<% if current_user %>
	<div class = "booyah-box">
		<h2> My Games in Progress</h2>
		<% @user_games.each do |game| %>
			<% if game.black_player_id && game.status != "Complete" %>
				<h4> <%= link_to game.name, game_path(game) %> </h4>
			<% end %>
		<% end %>
	</div>

	<div class = "booyah-box">
		<h2> My Open Games </h2>
		<% @user_games.each do |game| %>
			<% if game.black_player_id == nil %>
				<h4> <%= link_to game.name, game_path(game) %> </h4>
			<% end %>
		<% end %>
	</div>
<% end %>

<div class = "booyah-box"> 
	<h2> Join a New Game </h2>
	<h6> Click on the game name to join it </h6>
	<% @games.each do |game| %> 
		<% if game.black_player_id == nil %>
			<h4><%= link_to game.name, game_path(game), method: :patch %> </h4>		
		<% end %>
	<% end %>
</div>